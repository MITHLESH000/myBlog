    <div class="hero-section">
        <div class="hero-text">
    
            <%- include('searchBar'); %>
                <% if (blogs && blogs.length > 0) { %>
                    <% blogs.slice(0, 1).forEach(blog => { %>
                        <h1>
                            <%= blog.title %>
                        </h1>
                        <h2>
                            <%= (blog.content || 'No content available').substring(0, 200) %>...
                        </h2>
                        <h2>Author: <%= blog.author %></h2>
                        <h2>Blog creation time: <%= new Date(blog.date).toLocaleDateString() %> Time: <%= new Date(blog.date).toLocaleTimeString() %><h2></h2>
                    <% }); %>
                <% } else { %>
                    <p>No blogs available</p>
                <% } %>
    
        </div>
        <div class="hero-icon">
            <svg class="icon" xmlns="http://www.w3.org/2000/svg" height="300" width="300"
                viewBox="0 0 448 512"><!--!Font Awesome Free 6.5.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.-->
